@model List<ResultGuestDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Misafir Adı</th>
        <th>Misafir Soyadı</th>
        <th>Şehir</th>
        <th>Telefon Numarası</th>
        <th>Sil</th>
   
     
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.GuestID</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td>@item.PhoneNumber</td>
            <td><a href="/Guest/DeleteGuest/@item.GuestID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="/Guest/UpdateGuest/@item.GuestID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
            <td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
        </tr>
    }

</table>
<a href="/Guest/AddGuest" class="btn mb-1 btn-rounded btn-outline-dark">Yeni Misafir Girişi</a>
