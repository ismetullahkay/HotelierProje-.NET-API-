@model ResultInboxDto
@{
    ViewData["Title"] = "MessageDetailsByInBox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="email-left-box">
    <a asp-action="AddSendMessage" asp-controller="AdminContact" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
    @await Html.PartialAsync("SideBarAdminContactPartial")
    <h5 class="mt-5 m-b-10">Kategoriler</h5>
    @await Html.PartialAsync("SideBarAdminContactCategoryPartial")
</div>
<div class="email-right-box">

    <div>
        <a asp-action="Inbox" asp-controller="AdminContact" aria-expanded="false" class="btn btn-dark down-toggle">
            Gelen Kutusu <span class="caret m-l-5"></span>
        </a>

    </div>

    <div class="read-content">
        <div class="media pt-5">
            <img class="mr-3 rounded-circle" src="~/adminweb/images/avatar/1.jpg">
            <div class="media-body">
                <h5 class="m-b-3">@Model.Name</h5>
                <p class="m-b-2">@(((DateTime)Model.Date).ToString("dd-MMM-yyyy"))</p>
            </div>

        </div>
        <hr>
        <div class="media mb-4 mt-1">
            <div class="media-body">
                <span class="float-right">@Model.Date.ToString("HH:mm")</span>
                <h4 class="m-0 text-primary">@Model.Subject</h4><small class="text-muted">Mail:@Model.Mail</small>
            </div>
        </div>

        <p>@Model.Message</p>

        <hr>
        <div class="form-group p-t-15">
            <textarea class="w-100 p-20 l-border-1" name="" id="" cols="30" rows="5" placeholder="Yanıt yazabilirsiniz..."></textarea>
        </div>
    </div>
</div>


